{
  "name": "optimal",
  "version": "4.3.0",
  "description": "A system for building and validating defined object structures.",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "types": "./dts/index.d.ts",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "packemon build --addEngines",
    "pack": "NODE_ENV=production packemon pack --addEngines --generateDeclaration=standard",
    "clean": "packemon clean",
    "coverage": "yarn run jest --coverage",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "format": "beemo prettier",
    "prerelease": "yarn run pack && yarn test",
    "release": "npx np --yolo --no-yarn",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "posttest": "yarn run lint",
    "type": "beemo typescript --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/optimal.git"
  },
  "keywords": [
    "opts",
    "options",
    "predicate",
    "validator",
    "config",
    "defaults",
    "object",
    "params",
    "struct"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.17.1",
    "@types/node": "^14.14.31",
    "conventional-changelog-beemo": "^2.1.0",
    "packemon": "^0.7.1"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      {
        "driver": "babel",
        "strategy": "none"
      },
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "buildFolder": "dts",
        "declarationOnly": true
      }
    ],
    "eslint": {
      "rules": {
        "default-param-last": "off",
        "no-param-reassign": "off"
      }
    }
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/milesjohnson"
  },
  "packemon": {
    "format": [
      "lib",
      "esm"
    ],
    "inputs": {
      "index": "src/NEW/index.ts"
    },
    "platform": [
      "browser",
      "node"
    ]
  }
}
